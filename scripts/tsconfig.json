{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "removeComments": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
